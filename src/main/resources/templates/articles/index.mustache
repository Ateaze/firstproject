{{>layouts/header}}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-4 text-dark">게시판</h1>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center" style="width: 10%;" >번호</th>
                                    <th scope="col" style="width: 35%;">제목</th>
                                    <th scope="col" style="width: 35%;">게시글</th>
                                </tr>
                            </thead>
                            <tbody>
                            {{#articleList}}
                                <tr class="align-middle">
                                    <td class="text-center fw-bold text-muted">{{id}}</td>
                                    <td>
                                        <a href="/articles/{{id}}" class="text-decoration-none fw-semibold text-primary">
                                            {{title}}
                                        </a>
                                    </td>
                                    <td class="text-muted">{{content}}</td>
                                </tr>
                            {{/articleList}}
                            {{^articleList}}
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-5">
                                        <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                        <h5>게시글이 없습니다!</h5>
                                        <p class="mb-0">첫번째 글을 작성해 보세요.</p>
                                    </td>
                                </tr>
                            {{/articleList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-end mt-3">
                <a href="/articles/new" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>글쓰기
                </a>
            </div>
        </div>
    </div>
</div>

{{>layouts/footer}}